               build.gradle.kts

plugins {
    alias(libs.plugins.android.application) apply false
}

tasks.register("clean", Delete::class) {
    delete(layout.buildDirectory)
}

if (file("$projectDir/gradle/tools.gradle").exists()) {
    apply(from = "$projectDir/gradle/tools.gradle")
}
     
           setting.gradle.kts

